generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(sales)
  createdAt DateTime @default(now())
  leads     Lead[]   @relation("UserLeads")

  @@map("users")
}


model Lead {
  id          Int        @id @default(autoincrement())
  name        String
  email       String
  phone       String
  companyName String 
  officePhone String
  source      String 
  assignedTo  Int
  status      LeadStatus
  createdAt   DateTime   @default(now())
  notes       String?   
  
  user        User       @relation("UserLeads", fields: [assignedTo], references: [id])
  @@map("leads")
}


model Reminder {
  
  id           Int      @id @default(autoincrement())
  title  String 
  description String
  reminderDate DateTime
  note String?
  createdAt    DateTime @default(now())


  @@map("reminders")
}
model Contactus {
  id        Int     @id @default(autoincrement())
  name      String
  email     String
  phone     String
  message   String?
  createdAt DateTime @default(now())
}


enum Role {
  sales
  admin
}

enum LeadStatus {
  new
  contacted
  qualified
  converted
}
