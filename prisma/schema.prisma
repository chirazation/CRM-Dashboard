generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(user)
  createdAt DateTime @default(now())
  leads     Lead[]   @relation("UserLeads")

  @@map("users")
}

model Lead {
  id         Int        @id @default(autoincrement())
  name       String
  email      String
  phone      String
  status     LeadStatus
  assignedTo Int
  source     String?
  createdAt  DateTime   @default(now())
  notes      String?
  companyId  Int?
  user       User       @relation("UserLeads", fields: [assignedTo], references: [id])
  company    Company?   @relation("CompanyLeads", fields: [companyId], references: [id])
  reminders  Reminder[]

  @@map("leads")
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])

  @@map("contacts")
}

model Company {
  id       Int       @id @default(autoincrement())
  name     String
  industry String?
  location String?
  contacts Contact[]
  leads    Lead[]    @relation("CompanyLeads")

  @@map("companies")
}

model Reminder {
  id           Int      @id @default(autoincrement())
  leadId       Int
  reminderDate DateTime
  note         String?
  lead         Lead     @relation(fields: [leadId], references: [id])

  @@map("reminders")
}

enum Role {
  user
  admin
}

enum LeadStatus {
  new
  contacted
  qualified
  lost
  converted
}
