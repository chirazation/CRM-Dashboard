generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(sales)
  createdAt DateTime @default(now())
  leads     Lead[]   @relation("UserLeads")

  @@map("users")
}


model Lead {
  id          Int        @id @default(autoincrement())
  name        String
  email       String
  phone       String
  status      LeadStatus
  assignedTo  Int
  source      String     
  createdAt   DateTime   @default(now())
  notes       String?   
  companyName String     
  user        User       @relation("UserLeads", fields: [assignedTo], references: [id])
  reminders   Reminder[]

  @@map("leads")
}


model Reminder {
  id           Int      @id @default(autoincrement())
  leadId       Int
  reminderDate DateTime
  note         String?
  lead         Lead     @relation(fields: [leadId], references: [id])

  @@map("reminders")
}
model Contactus {
  id        Int     @id @default(autoincrement())
  name      String
  email     String
  phone     String
  message   String?
  createdAt DateTime @default(now())
}


enum Role {
  sales
  admin
}

enum LeadStatus {
  new
  contacted
  qualified
  converted
}
